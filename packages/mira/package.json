{
  "name": "@mirajs/mira",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mira": "bin/mira.js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "run-s build:*",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --outDir dist",
    "build:vendor": "run-s build:vendor:*",
    "build:vendor:msgpack": "esbuild src/vendor/@msgpack.js --bundle --minify --format=esm --outfile=dist/vendor/@msgpack.js",
    "dev": "rollup -c -w --no-watch.clearScreen --environment DEV",
    "lint": "eslint . --ext .ts,tsx",
    "lint:fix": "eslint . --ext .ts,tsx --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.2",
    "@types/command-line-usage": "^5.0.1",
    "@types/debounce": "^1.2.0",
    "@types/ip": "^1.1.0",
    "@types/koa-send": "4.1.3",
    "@types/picomatch": "^2.2.4"
  },
  "dependencies": {
    "@mirajs/mira-workspace": "1.0.0",
    "@mirajs/util": "1.0.0",
    "@msgpack/msgpack": "2.7.1",
    "@web/dev-server": "^0.1.14",
    "globby": "^11.0.2",
    "koa-send": "5.0.1",
    "picomatch": "^2.2.2",
    "reflect-metadata": "0.1.13",
    "vite": "2.9.5"
  }
}
