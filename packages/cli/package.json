{
  "name": "@asteroid-mdx/cli",
  "version": "1.0.0",
  "types": "./module/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "import": "./module/index.js",
    "node": "./dist/index.js"
  },
  "bin": {
    "asteroid": "bin/asteroid.js"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist module",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly --outDir module",
    "predev": "shx rm -rf dist",
    "dev": "run-p dev:*",
    "dev:cli": "tsc -w --incremental -p tsconfig.dev.json",
    "dev:wui": "yarn workspace @asteroid-mdx/wui dev:module"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/node12": "^1.0.7",
    "@types/babel__code-frame": "^7.0.2",
    "@types/command-line-usage": "^5.0.1",
    "@types/debounce": "^1.2.0",
    "@types/ip": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.40.0",
    "shx": "^0.3.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@asteroid-mdx/cli-workspace": "1.0.0",
    "@web/dev-server": "^0.1.14",
    "@web/dev-server-hmr": "^0.1.9",
    "es-module-lexer": "^0.4.1",
    "esbuild": "^0.11.9",
    "globby": "^11.0.2",
    "reflect-metadata": "0.1.13"
  }
}
