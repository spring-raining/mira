{
  "name": "@mirajs/util",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spring-raining/mira.git",
    "directory": "packages/util"
  },
  "homepage": "https://github.com/spring-raining/mira",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./declaration-parser.js": {
      "default": "./dist/declaration-parser.js"
    },
    "./dependency-manager.js": {
      "default": "./dist/dependency-manager.js"
    },
    "./es-module.js": {
      "default": "./dist/es-module.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "run-s build:*",
    "build:rollup": "rollup -c",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --outDir dist",
    "dev": "rollup -c -w --no-watch.clearScreen --environment DEV",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "lint": "eslint . --ext .ts,tsx",
    "lint:fix": "eslint . --ext .ts,tsx --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/murmurhash-js": "^1.0.3",
    "@types/strip-comments": "^2.0.0",
    "esbuild": "0.14.38",
    "es-module-lexer": "0.10.5",
    "murmurhash-js": "1.0.0",
    "strip-comments": "2.0.1",
    "vitest": "0.13.1"
  }
}
