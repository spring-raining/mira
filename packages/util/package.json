    "lint": "eslint . --ext .ts,tsx",
    "lint:fix": "eslint . --ext .ts,tsx --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "es-module-lexer": "0.4.1",
    "strip-comments": "2.0.1"
  },
  "devDependencies": {
    "@types/strip-comments": "^2.0.0",
    "vitest": "0.13.1"
  }
